@model ConsumeAPI.Models.PersonModel


<h2>Add.Edit</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Save">
            <div></div>
            <@Html.HiddenFor(x => x.PersonID)
            <div class="form-group">
                <span class="text-danger"></span>
                <label asp-for="Name" class="control-lable"></label>
                <input type="text" asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger"></span>
                <label asp-for="Email" class="control-lable"></label>
                <input type="text" asp-for="Email" class="form-control"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger"></span>
                <label asp-for="Contact" class="control-lable"></label>
                <input type="text" asp-for="Contact" class="form-control"/>
                <span asp-validation-for="Contact" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <button asp-action="Save" class="btn btn-outline-dark">Save</button>
                <a class="btn btn-info" asp-action="GET">Back</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}